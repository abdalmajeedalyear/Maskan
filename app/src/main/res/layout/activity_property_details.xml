<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- شريط العودة والعنوان -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="تفاصيل العقار"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_favorite_border"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#2196F3" />

        </LinearLayout>

        <!-- معرض الصور -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ViewPager للصور -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- مؤشر الصور -->
                <LinearLayout
                    android:id="@+id/layoutIndicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center" />

                <!-- عدّاد الصور -->
                <TextView
                    android:id="@+id/tvImageCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    android:background="@drawable/counter_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="1/5"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- المعلومات الأساسية -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- العنوان والسعر -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvPropertyTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="شقة فاخرة في الرياض"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPropertyPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,200 ر.س"
                        android:textColor="#2196F3"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- الموقع -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        android:tint="#666666"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvPropertyLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="حي النخيل، الرياض"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- التفاصيل -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- الغرف -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_bed"
                            android:tint="#666666"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvBedrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 غرف"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- الحمامات -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_bath"
                            android:tint="#666666"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvBathrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 حمام"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- المساحة -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_area"
                            android:tint="#666666"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150 م²"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- نوع العقار والعرض -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- نوع العقار -->
                    <TextView
                        android:id="@+id/tvPropertyType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="شقة"
                        android:background="@drawable/tag_background"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textColor="#2196F3"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- نوع العرض -->
                    <TextView
                        android:id="@+id/tvOfferType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="للإيجار"
                        android:background="@drawable/tag_background_rent"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- أزرار الإجراءات -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- زر التقييم -->
                <Button
                    android:id="@+id/btnRate"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="تقييم"
                    android:textColor="#FF9800"
                    android:textSize="14sp"
                    android:background="@drawable/button_outline_orange"
                    android:drawableStart="@drawable/ic_star_filled"
                    android:drawablePadding="4dp" />

                <!-- زر المشاركة -->
                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="مشاركة"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:background="@drawable/button_outline_blue"
                    android:drawableStart="@drawable/ic_share"
                    android:drawablePadding="4dp" />

                <!-- زر الاتصال -->
                <Button
                    android:id="@+id/btnContact"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="اتصال"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:background="@drawable/button_outline_green"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- الوصف -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الوصف"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="شقة جميلة في حي النخيل بمساحة 150م²، تتكون من 3 غرف نوم وصالتين و2 حمام. الشقة مجهزة بتكييف مركزي وتطل على شارع هادئ."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- معلومات الاتصال -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="معلومات الاتصال"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- اسم المعلن -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        android:tint="#2196F3"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvContactName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="أحمد محمد"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- رقم الهاتف -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone"
                        android:tint="#2196F3"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvContactPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0551234567"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnCall"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="اتصال"
                        android:textColor="#2196F3"
                        android:background="@drawable/button_outline"
                        android:paddingHorizontal="16dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- قسم التقييمات والتعليقات - النسخة المحسنة -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- عنوان القسم مع زر إضافة تقييم -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="التقييمات والتعليقات"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnAddRating"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="+ أضف تقييم"
                        android:textColor="#2196F3"
                        android:textSize="13sp"
                        android:background="@drawable/button_outline_blue"
                        android:paddingHorizontal="16dp" />

                </LinearLayout>

                <!-- إحصائيات التقييم -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#FFF9E6"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp">

                    <!-- متوسط التقييم -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvAverageRatingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textColor="#FF9800"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="متوسط التقييم"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- خط فاصل -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#FFE0B2" />

                    <!-- عدد التقييمات -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalRatings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تقييم"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- خط فاصل -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#FFE0B2" />

                    <!-- النجوم المتوسطة -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <RatingBar
                            android:id="@+id/ratingBarAverage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:rating="0"
                            android:isIndicator="true"
                            style="?android:attr/ratingBarStyleSmall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التقييم العام"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- قائمة التعليقات -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="آراء المستخدمين"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- RecyclerView للتعليقات -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- رسالة عدم وجود تعليقات -->
                <TextView
                    android:id="@+id/tvNoComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="لا توجد تعليقات بعد. كن أول من يعلق!"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone" />

                <!-- زر عرض كل التعليقات -->
                <Button
                    android:id="@+id/btnShowAllComments"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="عرض جميع التعليقات"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- زر الاتصال الرئيسي -->
        <Button
            android:id="@+id/btnContactMain"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="اتصال بالمعلن"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="8dp"
            android:background="@drawable/button_gradient"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:elevation="4dp" />

    </LinearLayout>

</ScrollView>