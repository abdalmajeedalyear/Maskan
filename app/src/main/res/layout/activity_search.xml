<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <!-- شريط الفلترة العلوي الصغير -->
    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:elevation="4dp">


        <LinearLayout
            android:id="@+id/cardPropertyLocion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_stats_gradientttttt"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <TextView
                android:textColorHint="@color/background_white"
                android:id="@+id/tvPropertyLocion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="المنطقة"
                android:textColor="#333333"
                android:textSize="12sp"
                android:maxLines="1"
                android:textStyle="bold"

                android:ellipsize="end" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:tint="#FFFEFE" />

        </LinearLayout>

        <!-- زر نوع العقار - استخدام LinearLayout بدلاً من MaterialCardView -->
        <LinearLayout
            android:id="@+id/cardPropertyType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rent_gradient"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <TextView
                android:textColorHint="@color/background_white"
                android:id="@+id/tvPropertyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="نوع العقار"
                android:textColor="#333333"
                android:textSize="12sp"
                android:maxLines="1"
                android:textStyle="bold"

                android:ellipsize="end" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:tint="#FFFEFE" />

        </LinearLayout>

        <!-- زر السعر -->
        <LinearLayout
            android:id="@+id/cardPrice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/button_gradient"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="السعر"
                android:textColor="#333333"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:tint="#FFFDFD" />

        </LinearLayout>

        <!-- زر نوع العرض -->
        <LinearLayout
            android:id="@+id/cardOfferType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_stats_gradient"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/tvOfferType"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="نوع العرض"
                android:textColor="#333333"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:tint="#FFFCFC" />

        </LinearLayout>

        <!-- زر الغرف -->
        <LinearLayout
            android:id="@+id/cardBedrooms"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_stats_gradientttt"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/tvBedrooms"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="الغرف"
                android:textColor="#333333"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:tint="#FAF9F9" />

        </LinearLayout>

    </LinearLayout></HorizontalScrollView>


    <!-- شريط نتائج البحث -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8F9FA"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/tvResultsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="جاري البحث..."
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSortBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الافتراضي"
            android:textColor="#666666"
            android:textSize="12sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- قائمة النتائج -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- حالة عدم وجود نتائج -->
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_search"
            android:tint="#FFFFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لا توجد نتائج"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جرب تغيير معايير البحث"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>



    <!-- شريط التنقل السفلي -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:elevation="8dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>